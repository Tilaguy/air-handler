<sdf version="1.6">
  <model name="force_box">
    <pose>0 0 0.05 0 0 0</pose>
    <static>false</static>

    <!-- Base fija del sensor -->
    <link name="base_link">
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>1e-6</ixx>
          <iyy>1e-6</iyy>
          <izz>1e-6</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>
    </link>

    <!-- Cuerpo medido del sensor -->
    <link name="sensor_link">
      <pose>0 0 0 0 0 0</pose>
      <gravity>false</gravity>

      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>1e-6</ixx>
          <iyy>1e-6</iyy>
          <izz>1e-6</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>

      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://force_box/meshes/FMAMSDXX015WC2C3.dae</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </visual>

      <collision name="collision">
        <geometry>
          <box><size>0.00483 0.00483 0.00253</size></box>
        </geometry>
      </collision>
    </link>

    <!-- UniÃ³n fija entre base y sensor -->
    <joint name="force_joint" type="revolute">
      <parent>base_link</parent>
      <child>sensor_link</child>
    </joint>

